@model tryingSystem.Models.TaskInit

<h2>Add Task</h2>

<form asp-action="AddTask" method="post">
    <di class="form-group">
        <label>Description</label>
        <input type="text" asp-for="Description" class="form-control"/>
    </div>
     <div class="form-group">
        <label>Assign to Nurse</label>
        <select asp-for="AssignedToNurseId" class="form-control" asp-items="@(new SelectList(ViewBag.Nurses, "Id", "UserName"))">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Task</button>
</form>