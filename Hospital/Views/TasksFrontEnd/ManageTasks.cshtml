@model IEnumerable<tryingSystem.Models.TaskInit>

    <h2>Manage Tasks</h2>
    <a asp-action="AddTask" class="btn btn-primary">Add A New Task</a>

    <table class="table">
        <thead>
            <tr>
                 <th>Description</th>
                <th>Assigned Nurse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Description</td>
                    <td>@task.AssignedToNurse.UserName</td>
                    <td>
                        <a asp-action="EditTask" asp-route-id="@task.TaskId" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteTask" asp-route-id="@task.TaskId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>